<% unless @artist.errors.messages.empty? %>
  <div id="errors"/>
    <h3>Errors</h3>
    <ul>
      <% @artist.errors.messages.each do |field, error| %>
        <li>
          <em><%= "#{field.capitalize}: #{error.first}" %></em>
        </li>
      <% end %>
      <br/>
    </ul>
  </div>
<% end %>